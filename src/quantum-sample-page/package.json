{
  "name": "quantum-sample-page-assets",
  "version": "1.0.0",
  "description": "Assets managment project for Sitefinity .Net core renderer",
  "scripts": {
    "start": "run-s build watch",
    "build:scss": "run-s lint-scss scss copy:assets",
    "build:js": "run-s copy:js uglifyjs",
    "build": "run-s build:scss build:js",
    "scss": "node-sass --output-style expanded src/scss/quantum-sample-page.scss wwwroot/css/quantum-sample-page.css && node-sass --output-style compressed src/scss/quantum-sample-page.scss wwwroot/css/quantum-sample-page.min.css",
    "watch:scss": "onchange \"src/scss/**/*.scss\" -- npm run build:scss",
    "watch:js": "onchange \"src/scripts/**/*.js\" -- npm run build:js",
    "watch": "run-p watch:scss watch:js",
    "lint-scss": "stylelint src/scss/**/*.scss --syntax scss",
    "postcss": "postcss --config postcss.config.js -r wwwroot/css/*",
    "copy:assets": "copyfiles -u 1 src/assets/**/*.* wwwroot",
    "copy:js": "copyfiles -u 1 src/scripts/*.js wwwroot",
    "uglifyjs": "uglifyjs wwwroot/scripts/scripts.js -c -m -o wwwroot/scripts/scripts.js"
  },
  "author": "Sitefinity",
  "devDependencies": {
    "copyfiles": "2.4.0",
    "node-sass": "5.0.0",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "stylelint": "13.7.2",
    "uglify-js": "3.11.5"
  }
}
